    "@types/phoenix": "^1.4.4",
    "@types/sqlite3": "^3.1.6",
    "concurrently": "^5.1.0",
    "electron": "^8.2.1",
    "electron-builder": "^22.4.1",
    "nodemon": "^2.0.2",
    "ts-node": "^8.8.2",
